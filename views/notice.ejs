<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notices</title>
    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #71b7e6, #9b59b6);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 20px;
        }

        /* Container for Notice Cards */
        .notices-container {
            display: grid;
           
            gap: 20px;
            width: 100%;
            max-width: 1200px;
        }

        /* Notice Card */
        .notice-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            animation: fadeIn 1.5s ease-in-out;
            transition: transform 0.3s;
            padding: 20px;
            text-align: center;
        }

        .notice-card:hover {
            transform: translateY(-5px);
        }

        .notice-card h3 {
            margin-bottom: 10px;
            color: #333;
        }

        .notice-card p {
            margin-bottom: 5px;
            color: #666;
        }

        /* Animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <h1>Notices</h1>
    <br>
    <div class="notices-container">
        <% notices.forEach(function(notice) { %>
            <div class="notice-card">
                <h3><%= notice.notice %></h3>
                <p>Date: <%= new Date(notice.date).toLocaleDateString() %></p>
                <br>
                <a href="/admin/delete/notice/<%= notice._id %>">Delete Notice</a>
            </div>
        <% }) %>
    </div>
</body>
</html>
